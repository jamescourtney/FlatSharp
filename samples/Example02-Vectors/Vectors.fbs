// Declare FlatSharp attributes.

attribute "fs_vector";
attribute "fs_serializer";

namespace Samples.Vectors;

table LotsOfLists
{
    // Vectors are IList<T> by default. You can make this explicity with fs_vector:"IList"
    list_vector_of_string : [ string ]; 

    // They can also be IReadOnlyList.
    read_only_list_vector_of_string : [ string ] (fs_vector:"IReadOnlyList");

    // ...Or Arrays (though you probably shouldn't do this.)
    array_vector_of_int : [ int ] (fs_vector:"Array");

    // Or even Memory<byte>
    vector_of_ubyte : [ ubyte ] (fs_vector:"Memory");

    // And finally ReadOnlyMemory<byte>
    read_only_vector_of_ubyte : [ ubyte ] (fs_vector:"ReadOnlyMemory");
}